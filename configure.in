#                                               -*- Autoconf -*-
# Process this file with autoconf to produce a configure script.

AC_PREREQ(2.61)
AC_INIT(IBR-DTN, 1.0, morgenro@ibr.cs.tu-bs.de)
AC_CONFIG_SRCDIR([src/daemon/DefaultDaemon.cpp])
AC_CONFIG_HEADER([include/config.h])

# Checks for programs.
AC_PROG_CXX
AC_PROG_CC
AC_PROG_MAKE_SET

# Checks for libraries.
AC_CHECK_LIB([pthread], [pthread_mutex_init])
AC_CHECK_LIB([sqlite3], [sqlite3_open])
#AC_CHECK_LIB([commoncpp2], [getThread])

# Checks for header files.
AC_HEADER_STDC
AC_CHECK_HEADERS([arpa/inet.h fcntl.h limits.h netinet/in.h stdlib.h string.h sys/socket.h unistd.h])

# Checks for typedefs, structures, and compiler characteristics.
AC_HEADER_STDBOOL
AC_C_CONST
AC_C_INLINE
AC_TYPE_SIZE_T
AC_HEADER_TIME
AC_TYPE_UINT64_T

# Checks for library functions.
AC_FUNC_REALLOC
AC_FUNC_SELECT_ARGTYPES
AC_TYPE_SIGNAL
AC_FUNC_STRTOD
AC_CHECK_FUNCS([select socket sqrt])

AC_ARG_ENABLE([debug],
	[AC_HELP_STRING([--enable-debug],
	[enable extra debugging output [default=no]])],
	[AC_DEFINE([DO_DEBUG_OUTPUT], [],
	[Define to enable extra debugging output.])],
	[])

AC_CONFIG_FILES([Makefile])
AC_OUTPUT
